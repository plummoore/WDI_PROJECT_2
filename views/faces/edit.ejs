<div class="row">
  <div class="col-lg-12 col-md-12">
    <form method="POST" action="/faces/<%= face.id %>" class="edit">
      <input type="hidden" class="form-control" name="_method" value="PUT">

      <div>
        <label for="image">Image url</label>
        <input type="text" class="form-control" name="image" id="image" value="<%= face.image %>">
      </div>

      <div>
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" id="title" value="<%= face.title %>">
      </div>

      <div>
        <label for="location">Location</label>
        <input type="text" class="form-control" name="location" id="location" value="<%= face.location %>">
      </div>

      <div>
        <label for="rating">Love</label>
        <input type="number" class="form-control" name="rating" id="rating" value="<%= face.rating %>">
      </div>

      <button>Update</button>
    </form>
  </div>
</div>
