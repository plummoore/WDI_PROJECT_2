<%# <h1>Faces home</h1>%>
<div class ="row">
  <%# <div class="col-lg-12 col-md-6">%>
    <a href="/faces/new" class="col-lg-12 col-md-12 btn btn-light">Add a new face</a>
  <%# </div>%>
</div>

<div class="container">
  <ul class="row">
    <% faces.forEach((face) => { %>
      <ul class="faces col-lg-4 col-md-6">

      <div class="face"><a href= "/faces/<%= face.id %>"><img class="pic img-thumbnail img-fluid" src="<%= face.image %>"></a></div>

      <div class"title"><h2><%= face.title %></h2></div>

      <div class"location"><p><span class="pre">Location: </span><%= face.location %></p></div>

      <div class="rating"><p><span class="pre">Joy: </span><span class="hearts"><% while(face.rating--) { %> &hearts; <% } %></span></p></div>

      <div class="added"><p><span class="pre">Added by: </span><%= face.createdBy.username %></p></div>
      </ul>
      <% }) %>
    </ul>
  </div>
